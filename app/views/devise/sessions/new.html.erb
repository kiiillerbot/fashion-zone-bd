<% content_for :title do %>
  Admin Login
<% end %>

<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-sm-4 col-lg-5 col-sm-offset-4">
      <div class="card">
        <h3 class="text-center">Login</h3>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <small class="text-muted">Email</small><br>
              <%= f.email_field :email, autofocus: true, placeholder: 'Your email', class: 'form-control' %>
            </div>

            <div class="form-group my-2">
              <small class="text-muted">Password</small><br>
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Your password', class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= button_tag 'Login',
                class: 'btn btn-orange btn-block btn-lg', 
                data: { disable_with: "<i class='fas fa-spinner'></i> Loggin in ..."} %>
            </div>

            <div class="mt-2 text-center">
              <small>
                <%= link_to "Back To Home", root_path, :class=>"text-muted"%>
              </small>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
